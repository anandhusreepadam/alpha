<style>
    .checkmark-container {
  display: inline-block;
  width: 80px;
  height: 80px;
}

.checkmark {
  width: 100%;
  height: 100%;
  stroke-width: 2;
  stroke: #4caf50;
  stroke-miterlimit: 10;
  animation: scale-up 0.3s ease-in-out both;
}

.checkmark__circle {
  stroke-dasharray: 166;
  stroke-dashoffset: 166;
  stroke-width: 2;
  stroke: #4caf50;
  fill: none;
  animation: circle-draw 0.5s ease-in-out forwards;
}

.checkmark__check {
  stroke-dasharray: 48;
  stroke-dashoffset: 48;
  stroke-width: 3;
  animation: check-draw 0.3s 0.5s ease-in-out forwards;
}

@keyframes circle-draw {
  to {
    stroke-dashoffset: 0;
  }
}

@keyframes check-draw {
  to {
    stroke-dashoffset: 0;
  }
}

@keyframes scale-up {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}

</style>

<div class="container text-center p-t-75 p-b-85">
  <div class="order-completed">
    <div class="checkmark-container">
      <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
        <path class="checkmark__check" fill="none" d="M14 27l10 10L39 16" />
      </svg>
    </div>
    <h2 class="mtext-109 cl2 p-t-30">Order Completed!</h2>
    <p class="stext-102 cl2 p-t-15">Thank you for your purchase. Your order has been placed successfully.</p>
    <a href="/" class="btn btn-primary mt-4">Continue Shopping</a>
    <a href="/orders" class="btn btn-primary mt-4">View Orders</a>
  </div>
</div>

