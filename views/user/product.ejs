<%-include("../../views/partials/user/header")%>

    <section class="bg0 p-t-23 p-b-140">

        <div class="container">
            <title>Product Details</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
                rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

            <style>
                /* Main Image Styling */
                .breadcrumb {
                    background-color: #fff;
                    padding: 10px 15px;
                    border-radius: 5px;
                    margin-bottom: 20px;
                }

                .breadcrumb a {
                    text-decoration: none;
                    color: #007bff;
                }

                .breadcrumb a:hover {
                    text-decoration: underline;
                }

                .main-image-container {
                    position: relative;
                    overflow: hidden;
                    border: 1px solid #ddd;
                    width: 100%;
                    height: 600px;
                    /* Reduced size */
                }

                .main-image {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    /* Maintain aspect ratio */
                    transition: transform 0.3s ease;
                    /* Smooth zoom transition */
                    cursor: zoom-in;
                }

                .main-image-container:hover .main-image {
                    .product-image-container:hover .product-image {
                        transform: scale(1.5);
                        /* Scale the image on hover */
                        cursor: zoom-out;
                    }
                }

                /* Thumbnails Styling */


                .thumbnails-container::-webkit-scrollbar {
                    display: none;
                    /* For Chrome, Safari, and Edge */
                }

                .thumbnails-container {
                    max-height: 600px;
                    overflow-y: auto;
                }


                .thumbnail img {
                    cursor: pointer;
                    margin-bottom: 10px;
                    border: 2px solid transparent;
                    width: 100%;
                    /* Ensures thumbnails resize responsively */
                    height: auto;
                }

                .thumbnail img:hover,
                .thumbnail img.active {
                    border-color: #007bff;
                }

                /* Review Section */
                .review-box textarea {
                    resize: none;
                }

                .rating {
                    color: #ffc107;
                    font-size: 1.2rem;
                }

                /* Customer Reviews */
                .review-container {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .review-container .like-button {
                    cursor: pointer;
                    color: gray;
                }

                .review-container .like-button.liked {
                    color: red;
                }

                /* Spacer */
                .spacer {
                    height: 30px;
                }

                /* Responsive Styling */
                @media (max-width: 768px) {
                    .main-image-container {
                        height: 200px;
                        /* Smaller for smaller screens */
                    }

                    .thumbnails-container {
                        flex-direction: row;
                        overflow-x: auto;
                        overflow-y: hidden;
                    }

                    .thumbnail img {
                        width: 70px;
                        height: 70px;
                    }

                    .review-container {
                        flex-direction: column;
                        align-items: flex-start;
                    }
                }
            </style>

            <div class="container mt-5">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                        <li class="breadcrumb-item " aria-current="page">
                            <%= product.productName %>
                        </li>
                    </ol>

                </nav>
                <div class="row">
                    <!-- Thumbnails Section -->
                    <div class="col-md-2 thumbnails-container d-flex flex-column">
                        <div class="thumbnail">
                            <img src="/uploads/product-images/<%=product.productImage[0]%>" alt="Image 1"
                                class="img-thumbnail" onclick="changeMainImage(this)">
                        </div>
                        <div class="thumbnail">
                            <img src="/uploads/product-images/<%=product.productImage[1]%>" alt="Image 2"
                                class="img-thumbnail" onclick="changeMainImage(this)">
                        </div>
                        <div class="thumbnail">
                            <img src="/uploads/product-images/<%=product.productImage[2]%>" alt="Image 3"
                                class="img-thumbnail" onclick="changeMainImage(this)">
                        </div>
                        <div class="thumbnail">
                            <img src="/uploads/product-images/<%=product.productImage[3]%>" alt="Image 4"
                                class="img-thumbnail" onclick="changeMainImage(this)">
                        </div>
                    </div>

                    <!-- Main Image Section -->
                    <div class="col-md-6">
                        <div class="main-image-container" id="mainImageContainer">
                            <img src="/uploads/product-images/<%=product.productImage[0]%>" class="main-image"
                                id="mainProductImage" alt="Product">
                        </div>
                    </div>




                    <!-- Product Details -->
                    <div class="col-md-4">
                        <h1>
                            <%=product.productName%>
                        </h1>
                        <p class="text-muted">
                            <%=product.description%>
                        </p>
                        <h3 class="text-danger">â‚¹<%=product.salePrice%>
                        </h3>
                        <div>
                            <span class="rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </span>
                            <span class="text-muted">(45 reviews)</span>
                        </div>
                        <p class="mt-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut pharetra euismod
                            libero a gravida. Proin non ornare metus.</p>
                        <div class="d-flex mt-3">
                            <button onclick="addToCart('<%=product._id%>')" class="add-to-cart btn btn-primary me-2">Add to Cart</button>
                            <button class="btn btn-outline-danger">Add to Wishlist</button>
                        </div>
                    </div>
                </div>

                <!-- Spacer -->
                <div class="spacer"></div>

                <!-- Reviews Section -->
                <div class="row mt-5">
                    <div class="col-md-12">
                        <h3>Customer Reviews</h3>
                        <div id="reviews">
                            <div class="review-container">
                                <p><strong>John Doe</strong>: Great product! Highly recommend it.</p>
                                <span class="like-button" onclick="toggleLike(this)"><i class="fas fa-heart"></i></span>
                            </div>
                            <div class="review-container">
                                <p><strong>Jane Smith</strong>: Good value for money.</p>
                                <span class="like-button" onclick="toggleLike(this)"><i class="fas fa-heart"></i></span>
                            </div>
                        </div>
                        <div class="review-box mt-4">
                            <h5>Write a Review</h5>
                            <textarea class="form-control" rows="3" id="reviewInput"
                                placeholder="Share your thoughts..."></textarea>
                            <button class="btn btn-success mt-2" onclick="submitReview()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    </div>

    <script>


async function addToCart(productId) {
        const quantity = 1;
        try {
            const response = await fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({productId, quantity }),
            });

            const result = await response.json();
            if (result.success) {
                swal('success', "Added to cart !", "success");
            } else {
                swal('error', "error while adding !", "error");
            }
        } catch (error) {
            console.error('Error adding to cart:', error);
        }
    };

        const container = document.querySelector('.main-image-container');
        const image = document.querySelector('.main-image');

        container.addEventListener('mousemove', (e) => {
            const rect = container.getBoundingClientRect();
            const x = e.clientX - rect.left; // X-coordinate relative to container
            const y = e.clientY - rect.top;  // Y-coordinate relative to container

            const xPercent = (x / rect.width) * 100; // Percentage X
            const yPercent = (y / rect.height) * 100; // Percentage Y

            image.style.transformOrigin = `${xPercent}% ${yPercent}%`; // Set zoom origin
            image.style.transform = 'scale(2)'; // Zoom in
        });

        container.addEventListener('mouseleave', () => {
            image.style.transform = 'scale(1)'; // Reset zoom
            image.style.transformOrigin = 'center'; // Reset origin
        });
       
        function changeMainImage(img) {
            const mainImage = document.getElementById('mainProductImage');
            mainImage.src = img.src;

            // Highlight active thumbnail
            document.querySelectorAll('.thumbnail img').forEach(thumbnail => {
                thumbnail.classList.remove('active');
            });
            img.classList.add('active');
        }

      
        function submitReview() {
            const reviewInput = document.getElementById('reviewInput');
            const reviews = document.getElementById('reviews');
            if (reviewInput.value.trim()) {
                const newReview = `
                <div class="review-container">
                    <p><strong>You</strong>: ${reviewInput.value.trim()}</p>
                    <span class="like-button" onclick="toggleLike(this)"><i class="fas fa-heart"></i></span>
                </div>`;
                reviews.innerHTML += newReview;
                reviewInput.value = '';
            }
        }

       
        function toggleLike(button) {
            button.classList.toggle('liked');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <%-include("../../views/partials/user/footer")%>